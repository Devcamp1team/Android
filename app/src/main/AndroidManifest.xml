<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.park.yapp_1team">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/MapBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- activity_splash -->
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <!-- activity_splash -->
        <activity android:name=".activities.LocationSetupActivity"
            android:theme="@style/MapBar"></activity>
        <activity
            android:name=".activities.MapActivity"
            android:theme="@style/MapBar"></activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/app_key" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB8jE0voZOLRMSy26LpYYrf2QEtYQUuZ4s" />

        <activity android:name=".activities.SelectMovieInfoActivity"
            android:theme="@style/MapBar"></activity>
    </application>

</manifest>