<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.park.yapp_1team.views.SettingActivity">

    <ImageView
        android:id="@+id/img_setting_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:onClick="click"
        android:src="@drawable/ic_clear_black_24dp" />

    <ImageView
        android:id="@+id/img_setting_logo"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_below="@id/img_setting_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:src="@drawable/moviego_icon" />

    <LinearLayout
        android:id="@+id/layout_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_setting_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_setting_title_a"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="MOVIE"
            android:textColor="#6a7482"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_setting_b"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="GO"
            android:textColor="@color/colorAccent"
            android:textSize="26dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_setting_version"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/layout_setting_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:text="@string/version"
        android:textColor="#6a7482"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_setting_evaluation"
        android:layout_width="187dp"
        android:layout_height="50dp"
        android:layout_below="@id/txt_setting_version"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button"
        android:onClick="click"
        android:text="앱 평가"
        android:textColor="@color/colorWhite"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txt_setting_acknowledgment"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/btn_setting_evaluation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:onClick="click"
        android:text="Acknowledgement"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txt_setting_license"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/txt_setting_acknowledgment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:onClick="click"
        android:text="License"
        android:textColor="@color/colorAccent"
        android:textSize="18dp" />
</RelativeLayout>
