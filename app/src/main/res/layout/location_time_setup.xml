<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_location_setup"
        layout="@layout/toolbar_location_time_setup"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">

        <ImageView
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/magnifier_test" />

        <EditText
            android:id="@+id/location_search"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:inputType="text"
            android:hint="서울시 마포구 청담동"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="4"
            android:background="@android:color/transparent"
            android:scrollbarAlwaysDrawHorizontalTrack="true"/>

        <ImageView
            android:id="@+id/location_search_button"
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/location_search_test"/>

    </LinearLayout>
z
</LinearLayout>