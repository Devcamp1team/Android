<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/location_setup_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar_location_setup"
            layout="@layout/toolbar_location_time_setup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@android:color/white">

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"/>

            <!--<ImageView-->
                <!--android:layout_height="15dp"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/location_search_test"-->
                <!--android:layout_marginEnd="15dp" />-->

        </LinearLayout>

        <co.moonmonkeylabs.realmrecyclerview.RealmRecyclerView
            android:id="@+id/location_setup_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            app:rrvEmptyLayoutId="@layout/location_search_empty"
            app:rrvLayoutType="LinearLayout"
            app:rrvSwipeToDelete="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                android:text="시간"
                android:textColor="#8b8989" />


            <LinearLayout
                android:id="@+id/current_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/clock_test" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="현재 시간" />

                <ImageView
                    android:id="@+id/check_time1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/check_test"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setup_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/alarm_test" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="영화 시간 설정" />

                <ImageView
                    android:id="@+id/check_time2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="15dp"
                    android:focusableInTouchMode="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
