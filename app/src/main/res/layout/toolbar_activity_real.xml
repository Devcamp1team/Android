<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1_toolbar_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 바로"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text2_toolbar_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/text1_toolbar_main"
            android:text="장천동"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/image1_toolbar_main"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/text2_toolbar_main"
            android:src="@drawable/test" />

    </LinearLayout>


    <ImageView
        android:id="@+id/image2_toolbar_main"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/test" />


</RelativeLayout>