<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item_main_movie_full_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransport">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img_item_main_movie_full_thumbnail_small_size"
                android:layout_centerHorizontal="true"
                android:layout_width="84dp"
                android:layout_height="120dp" />

            <TextView
                android:id="@+id/txt_item_main_movie_full_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_item_main_movie_full_thumbnail_small_size"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>