<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.park.yapp_1team.MainActivity"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar_start"
        android:background="#EEEEEE">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/test"
            android:id="@+id/image1_start"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="영화 제목을 입력하세요."
            android:id="@+id/edit_start"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/image1_start" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_main"
        android:layout_below="@+id/toolbar_start">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerview_start"
        android:layout_below="@+id/toolbar_start">
    </android.support.v7.widget.RecyclerView>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:id="@+id/image2_underbar_start"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:layout_below="@+id/recyclerview_start"/>


        <android.support.design.widget.FloatingActionButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/test"
            android:id="@+id/image1_underbar_start"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="450dp"
            android:layout_below="@+id/recyclerview_start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1_underbar_start"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="465dp"
            android:text="0"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </FrameLayout>
</RelativeLayout>
